<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <ImageView android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:src="@drawable/congeor_logo"
               android:layout_gravity="center"
               android:padding="20dp"/>

    <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
              android:text="Registration Failed" android:phoneNumber="false"
              android:background="@android:color/white" android:textSize="@dimen/Header" android:textStyle="bold"
              android:editable="false" android:gravity="center" android:textColor="@android:color/holo_red_dark"
              android:id="@+id/textView2"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/congeorapp_reg_failed"
            android:id="@+id/textView"
            android:layout_gravity="center"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OK"
            android:id="@+id/regFailed_okButton"
            android:layout_margin="20dp"
            android:layout_gravity="center"/>

</LinearLayout>