<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Login"
              android:phoneNumber="false" android:background="@android:color/transparent" android:textSize="@android:dimen/app_icon_size"
              android:textStyle="bold" android:editable="false" android:gravity="center" android:textColor="#2F71C6"
              android:id="@+id/textView" android:layout_gravity="center_horizontal" android:paddingTop="2dp"
              android:layout_alignParentTop="true" android:layout_centerHorizontal="true"
              android:layout_marginTop="43dp"/>
    <TextView
            android:layout_height="wrap_content"
            android:layout_width="85dp"
            android:gravity="left"
            android:text="E-mail:"
            android:layout_column="0"
            android:layout_row="0"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/textView2"
            android:layout_alignBottom="@+id/email" android:layout_toLeftOf="@+id/email"/>
    <EditText android:id="@+id/email"
              android:layout_height="wrap_content"
              android:layout_width="200dp"
              android:layout_column="1"
              android:layout_row="0"
              android:inputType="textEmailAddress"
              android:textAppearance="?android:attr/textAppearanceMedium"
              android:enabled="true"
              android:text=""
              android:layout_marginTop="102dp"
              android:layout_below="@+id/textView" android:layout_alignLeft="@+id/textView" android:autoText="false"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Please enter the mail "
            android:id="@+id/textView3"
            android:layout_marginTop="24dp" android:layout_below="@+id/textView"
            android:layout_centerHorizontal="true"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="you registered to the experiment with"
            android:id="@+id/textView4" android:layout_below="@+id/textView3" android:layout_centerHorizontal="true"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Login"
            android:id="@+id/sendLoginButton"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="62dp"
            android:inputType="textWebEmailAddress"
            android:background="#ffffb254" android:clickable="true" android:layout_below="@+id/textView2"
            android:layout_alignLeft="@+id/textView4" android:layout_alignRight="@+id/email"/>

    <ProgressBar
            android:id="@+id/progressBar1"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/textView2" android:layout_centerHorizontal="true"/>
</RelativeLayout>